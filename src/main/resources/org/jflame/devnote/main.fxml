<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jflame.devnote.controller.MainView">
   <left>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="200.0" prefHeight="768.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" fillHeight="false" prefHeight="60.0" prefWidth="200.0" spacing="10.0">
               <children>
                <Button focusTraversable="false" maxHeight="50.0" prefHeight="50.0" prefWidth="55.0" text="知识导航" textAlignment="CENTER" wrapText="true">
                     <graphic>
                        <Glyph fontFamily="FontAwesome" icon="SEARCH" />
                     </graphic>
                </Button>
                  <Button focusTraversable="false" maxHeight="50.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="55.0" text="工具箱" textAlignment="CENTER" wrapText="true" />
               </children>
            </HBox>
            <Separator style="-fx-background-color: #fff;" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <TabPane id="mainTab" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="768.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE" tabMinHeight="30.0" tabMinWidth="60.0" BorderPane.alignment="CENTER">
