          <Tab id="tabKown" closable="false" text="知识库">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab id="tabToolbox" text="工具箱">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
         <BorderPane.margin>
            <Insets top="5.0" />
         </BorderPane.margin>
      </TabPane>
   </center>
</BorderPane>
